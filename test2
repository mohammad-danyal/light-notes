    <script type="module">
        const getUUID = () => {
            if (typeof crypto !== 'undefined' && crypto.randomUUID) return crypto.randomUUID();
            return 'xxxx-xxxx-4xxx-yxxx-xxxx'.replace(/[xy]/g, (c) => {
                const r = Math.random() * 16 | 0, v = c == 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        };

        const LAYOUT = {
            CARD_WIDTH: 450,
            DEFAULT_HEIGHT: 200,
            VERTICAL_GAP: 48,
            STACK_HEIGHT: 200
        };

        window.state = {
            boards: [],
            currentBoardId: null,
            cards: [],
            activeId: null,
            activeStackTag: null,
            isExploring: false,
            selectedStackCardIndex: 0,
            camera: { x: window.innerWidth / 2 - 225, y: window.innerHeight / 2 - 80 },
            isDraggingViewport: false,
            paletteOpen: false,
            boardSwitcherOpen: false,
            promptOpen: false,
            deletePromptOpen: false,
            sourceOpen: false,
            presentationMode: false,
            currentSlideIndex: 0,
            presentationSlides: [],
            deleteTargetType: null, // 'stack' or 'board'
            selectedPromptButton: 'confirm', // 'confirm' or 'cancel'
            selectedDeleteButton: 'cancel', // 'confirm' or 'cancel'
            slashMenuOpen: false,
            selectedSlashIndex: 0,
            selectedBoardIndex: 0,
            selectedPaletteIndex: 0,
            paletteResults: [],
            draggedItem: null,
            dragOffset: { x: 0, y: 0 },

            init() {
                const saved = localStorage.getItem('jotter_boards_stacks_v4');
                if (saved) {
                    try {
                        const data = JSON.parse(saved);
                        this.boards = data.boards || [];
                        this.currentBoardId = data.currentBoardId;
                    } catch (e) { console.error("Restore failed", e); }
                } 
                if (!this.boards.length) {
                    const firstBoard = { id: getUUID(), name: 'Main Workspace', cards: [] };
                    this.boards = [firstBoard];
                    this.currentBoardId = firstBoard.id;
                    this.cards = firstBoard.cards;
                    const centerX = window.innerWidth / 2 - 225;
                    const centerY = window.innerHeight / 2 - 80;
                    this.createCard("<h1>Welcome to Jotter</h1><p>Try adding tags like #work or #ideas to auto-stack cards! Stacks only form when <b>two or more</b> cards share the exact same tag.</p><p>Type <code>/</code> to open the command menu.</p>", centerX, centerY);
                } else {
                    this.loadCurrentBoard();
                }
                this.render();
                if (this.cards.length > 0) this.focusItem(this.cards[0].id);
                this.setupEventListeners();
            },

            loadCurrentBoard() {
                const board = this.boards.find(b => b.id === this.currentBoardId);
                if (board) this.cards = board.cards;
                else if (this.boards.length > 0) {
                    this.currentBoardId = this.boards[0].id;
                    this.cards = this.boards[0].cards;
                }
            },

            setupEventListeners() {
                window.addEventListener('keydown', this.handleGlobalKeys.bind(this));
                const canvas = document.getElementById('canvas-root');
                canvas.addEventListener('mousedown', this.onMouseDown.bind(this));
                window.addEventListener('mousemove', this.onMouseMove.bind(this));
                window.addEventListener('mouseup', this.onMouseUp.bind(this));
                document.getElementById('palette-input').oninput = (e) => this.searchPalette(e.target.value);
                document.getElementById('palette-overlay').onclick = (e) => { if (e.target.id === 'palette-overlay') this.togglePalette(false); };
                document.getElementById('board-switcher-overlay').onclick = (e) => { if (e.target.id === 'board-switcher-overlay') this.toggleBoardSwitcher(); };
                document.getElementById('prompt-overlay').onclick = (e) => { if (e.target.id === 'prompt-overlay') this.closePrompt(); };
                document.getElementById('delete-overlay').onclick = (e) => { if (e.target.id === 'delete-overlay') this.closeDeletePrompt(); };
                document.getElementById('source-overlay').onclick = (e) => { if (e.target.id === 'source-overlay') this.closeSource(); };
                
                document.querySelectorAll('.slash-item').forEach((item, idx) => {
                    item.onclick = (e) => { e.stopPropagation(); this.applySlashCommand(item.dataset.cmd); };
                    item.onmouseenter = () => { this.selectedSlashIndex = idx; this.updateSlashSelection(); };
                });

                document.addEventListener('click', (e) => {
                    if (e.target.classList.contains('todo-checkbox')) {
                        const cb = e.target;
                        if (cb.checked) cb.setAttribute('checked', 'checked');
                        else cb.removeAttribute('checked');
                        const editor = cb.closest('.card-editor');
                        const cardContainer = cb.closest('.card') || cb.closest('.deck-item');
                        const cardId = cardContainer?.dataset.id;
                        if (cardId && editor) {
                            const card = this.cards.find(c => c.id === cardId);
                            if (card) { card.content = editor.innerHTML; this.save(); }
                        }
                    }
                });
            },

            reflow(forceCloseGaps = false) {
                const stacks = this.getStacks();
                const stackedCardIds = new Set();
                Object.values(stacks).forEach(g => g.forEach(c => stackedCardIds.add(c.id)));
                const blocks = [];
                this.cards.forEach(c => {
                    if (!stackedCardIds.has(c.id)) {
                        const el = document.querySelector(`.card[data-id="${c.id}"]`);
                        blocks.push({ id: c.id, type: 'card', x: c.x, y: c.y, h: el ? el.offsetHeight : LAYOUT.DEFAULT_HEIGHT, ref: c });
                    }
                });
                Object.entries(stacks).forEach(([tag, group]) => {
                    blocks.push({ id: tag, type: 'stack', x: group[0].x, y: group[0].y, h: LAYOUT.STACK_HEIGHT, ref: group });
                });
                blocks.sort((a, b) => a.y - b.y);
                for (let i = 0; i < blocks.length; i++) {
                    const a = blocks[i];
                    for (let j = i + 1; j < blocks.length; j++) {
                        const b = blocks[j];
                        const overlapX = (Math.abs(a.x - b.x) < LAYOUT.CARD_WIDTH - 20);
                        if (overlapX) {
                            const minNextY = a.y + a.h + LAYOUT.VERTICAL_GAP;
                            if (forceCloseGaps || b.y < minNextY) {
                                const diff = minNextY - b.y;
                                b.y = minNextY;
                                if (b.type === 'card') b.ref.y = b.y;
                                else b.ref.forEach(c => c.y += diff);
                            }
                        }
                    }
                }
                this.render();
            },

            extractTags(content) {
                if (!content) return [];
                const tags = [...content.matchAll(/#(\w+)(?=\s|<|$)/g)].map(m => m[1]);
                return [...new Set(tags)];
            },

            createCard(content = "", x, y) {
                const id = getUUID();
                let finalX = x, finalY = y;
                if (this.cards.length > 0) {
                    const stacks = this.getStacks();
                    const stackedCardIds = new Set();
                    Object.values(stacks).forEach(g => g.forEach(c => stackedCardIds.add(c.id)));
                    let maxY = -Infinity;
                    this.cards.forEach(c => {
                        if (!stackedCardIds.has(c.id)) {
                            const el = document.querySelector(`.card[data-id="${c.id}"]`);
                            const h = el ? el.offsetHeight : LAYOUT.DEFAULT_HEIGHT;
                            if (c.y + h > maxY) maxY = c.y + h;
                        }
                    });
                    Object.entries(stacks).forEach(([tag, group]) => {
                        const anchor = group[0];
                        if (anchor.y + LAYOUT.STACK_HEIGHT > maxY) maxY = anchor.y + LAYOUT.STACK_HEIGHT;
                    });
                    if (maxY !== -Infinity) finalY = maxY + LAYOUT.VERTICAL_GAP;
                }
                this.cards.push({ id, content, x: finalX, y: finalY, lastEditedAt: Date.now() });
                this.render();
                this.focusItem(id);
                this.save();
            },

            deleteCard(id) {
                this.cards = this.cards.filter(c => c.id !== id);
                if (this.activeId === id) this.activeId = null;
                this.save();
                this.reflow(true);
            },

            handleDeleteConfirmation() {
                if (this.selectedDeleteButton === 'confirm') {
                    if (this.deleteTargetType === 'board') this.finalizeDeleteBoard();
                    else this.finalizeDeleteStack();
                } else {
                    this.closeDeletePrompt();
                }
            },

            openDeleteBoardPrompt() {
                const boardToDelete = this.boards[this.selectedBoardIndex];
                if (!boardToDelete || this.boards.length <= 1) return;
                this.deleteTargetType = 'board';
                this.deletePromptOpen = true;
                this.selectedDeleteButton = 'cancel';
                document.getElementById('delete-prompt-title').innerText = `Delete Workspace?`;
                document.getElementById('delete-prompt-body').innerText = `Permanently remove "${boardToDelete.name}" and all of its ${boardToDelete.cards.length} cards?`;
                document.getElementById('delete-overlay').classList.add('active');
                this.renderDeleteButtons();
            },

            finalizeDeleteBoard() {
                const boardToDelete = this.boards[this.selectedBoardIndex];
                this.boards = this.boards.filter(b => b.id !== boardToDelete.id);
                this.currentBoardId = this.boards[0].id;
                this.loadCurrentBoard();
                this.closeDeletePrompt();
                this.selectedBoardIndex = 0;
                this.renderBoardList();
                this.save();
                this.render();
                this.snapToActive();
            },

            openDeleteStackPrompt() {
                this.deleteTargetType = 'stack';
                this.deletePromptOpen = true;
                this.selectedDeleteButton = 'cancel';
                document.getElementById('delete-prompt-title').innerText = `Delete Stack?`;
                document.getElementById('delete-prompt-body').innerText = `This will delete all cards within the #${this.activeStackTag} stack.`;
                document.getElementById('delete-overlay').classList.add('active');
                this.renderDeleteButtons();
            },

            closeDeletePrompt() {
                this.deletePromptOpen = false;
                document.getElementById('delete-overlay').classList.remove('active');
            },

            finalizeDeleteStack() {
                if (this.activeStackTag) {
                    const s = this.getStacks();
                    const group = s[this.activeStackTag];
                    if (group) {
                        const ids = new Set(group.map(c => c.id));
                        this.cards = this.cards.filter(c => !ids.has(c.id));
                        this.activeId = this.activeStackTag = null;
                        this.closeDeletePrompt();
                        this.save();
                        this.reflow(true);
                    }
                }
            },

            save() {
                const bIdx = this.boards.findIndex(b => b.id === this.currentBoardId);
                if (bIdx !== -1) this.boards[bIdx].cards = this.cards;
                localStorage.setItem('jotter_boards_stacks_v4', JSON.stringify({ boards: this.boards, currentBoardId: this.currentBoardId }));
            },

            focusItem(idOrTag) {
                this.activeId = idOrTag;
                const s = this.getStacks();
                if (s[idOrTag]) { this.activeStackTag = idOrTag; this.isExploring = false; }
                else { this.activeStackTag = null; this.isExploring = false; }
                this.snapToActive();
                this.render();
                setTimeout(() => this.reflow(), 100);
                if (!this.activeStackTag) {
                    setTimeout(() => {
                        const ed = document.querySelector(`.card[data-id="${this.activeId}"] .card-editor`);
                        if (ed) this.placeCursorAtEnd(ed);
                    }, 150);
                }
            },

            placeCursorAtEnd(el) {
                if (!el) return; el.focus({ preventScroll: true });
                if (typeof window.getSelection != "undefined") {
                    const range = document.createRange(); 
                    range.selectNodeContents(el); 
                    range.collapse(false);
                    const sel = window.getSelection(); 
                    sel.removeAllRanges(); 
                    sel.addRange(range);
                }
            },

            snapToActive() {
                if (!this.activeId) {
                    this.camera = { x: window.innerWidth / 2 - 225, y: window.innerHeight / 2 - 80 };
                } else {
                    let tx, ty, s = this.getStacks();
                    if (s[this.activeId]) { tx = s[this.activeId][0].x; ty = s[this.activeId][0].y; }
                    else { const c = this.cards.find(x => x.id === this.activeId); if (!c) return; tx = c.x; ty = c.y; }
                    this.camera.x = (window.innerWidth / 2) - tx - 225;
                    this.camera.y = (window.innerHeight / 2) - ty - 120;
                }
                document.getElementById('viewport').style.transform = `translate(${this.camera.x}px, ${this.camera.y}px)`;
            },

            getStacks() {
                const g = {};
                this.cards.forEach(c => {
                    const tags = this.extractTags(c.content);
                    if (tags.length > 0) { const p = tags[0]; if (!g[p]) g[p] = []; g[p].push(c); }
                });
                const rs = {};
                for (const t in g) if (g[t].length > 1) rs[t] = g[t];
                return rs;
            },

            render() {
                const vp = document.getElementById('viewport'), s = this.getStacks(), stackedIds = new Set();
                Object.values(s).forEach(grp => grp.forEach(c => stackedIds.add(c.id)));
                const solo = this.cards.filter(c => !stackedIds.has(c.id)), rCardIds = new Set(), rTags = new Set();
                Object.entries(s).forEach(([tag, group]) => {
                    rTags.add(tag);
                    let el = vp.querySelector(`.stack-representation[data-tag="${tag}"]`);
                    if (!el) {
                        el = document.createElement('div'); el.className = 'stack-representation spawn-anim'; el.dataset.tag = tag;
                        el.onclick = (e) => { e.stopPropagation(); this.focusItem(tag); }; vp.appendChild(el);
                    }
                    el.innerHTML = `<div class="stack-shadow-layer"></div><div class="stack-shadow-layer-2"></div><div class="stack-label">#${tag}</div>
                        <div class="text-zinc-500 font-mono text-xs">${group.length} cards</div>
                        <div class="card-controls"><div class="control-btn delete" onclick="event.stopPropagation(); state.activeStackTag='${tag}'; state.openDeleteStackPrompt();">Ã—</div></div>`;
                    el.classList.toggle('focused', this.activeId === tag);
                    el.style.left = `${group[0].x}px`; el.style.top = `${group[0].y}px`;
                });
                solo.forEach(card => {
                    rCardIds.add(card.id);
                    let el = vp.querySelector(`.card[data-id="${card.id}"]`);
                    if (!el) {
                        el = document.createElement('div'); el.className = 'card spawn-anim'; el.dataset.id = card.id;
                        const ctrl = document.createElement('div'); ctrl.className = 'card-controls';
                        const dBtn = document.createElement('div'); dBtn.className = 'control-btn delete'; dBtn.innerHTML = 'Ã—';
                        dBtn.onclick = (e) => { e.stopPropagation(); this.deleteCard(card.id); };
                        const ed = document.createElement('div'); ed.className = 'card-editor'; ed.contentEditable = "true";
                        ed.oninput = (e) => this.handleEditorInput(e, card);
                        ed.onkeydown = (e) => this.handleEditorKeyDown(e, card);
                        ed.onblur = () => setTimeout(() => this.reflow(), 100);
                        ed.onfocus = () => { if (this.activeId !== card.id) this.focusItem(card.id); };
                        ctrl.appendChild(dBtn); el.appendChild(ctrl); el.appendChild(ed); vp.appendChild(el);
                    }
                    el.classList.toggle('focused', this.activeId === card.id);
                    el.style.left = `${card.x}px`; el.style.top = `${card.y}px`;
                    const ed = el.querySelector('.card-editor'); 
                    if (document.activeElement !== ed && !ed.contains(document.activeElement)) { ed.innerHTML = card.content || ""; }
                });
                vp.querySelectorAll('.card').forEach(el => { if (!rCardIds.has(el.dataset.id)) el.remove(); });
                vp.querySelectorAll('.stack-representation').forEach(el => { if (!rTags.has(el.dataset.tag)) el.remove(); });
                const sb = document.getElementById('stack-sidebar');
                if (this.isExploring && this.activeStackTag && s[this.activeStackTag]) { sb.classList.add('active'); this.renderStackSidebar(); } 
                else sb.classList.remove('active');
            },

            handleEditorInput(e, card) {
                const ed = e.target, oldT = this.extractTags(card.content);
                card.content = ed.innerHTML; const newT = this.extractTags(card.content);
                this.save(); 
                if (JSON.stringify(oldT) !== JSON.stringify(newT)) {
                    const stacks = this.getStacks();
                    let targetStackTag = null;
                    for (const tag in stacks) {
                        if (stacks[tag].some(c => c.id === card.id)) { targetStackTag = tag; break; }
                    }
                    if (targetStackTag) {
                        this.activeId = targetStackTag;
                        this.activeStackTag = targetStackTag;
                        this.isExploring = true;
                        this.selectedStackCardIndex = stacks[targetStackTag].findIndex(c => c.id === card.id);
                    }
                    this.render();
                }
                const sel = window.getSelection();
                if (sel.rangeCount > 0) {
                    const range = sel.getRangeAt(0), text = range.startContainer.textContent.substring(0, range.startOffset);
                    if (text.endsWith('/')) this.showSlashMenu(range);
                    else if (this.slashMenuOpen) this.hideSlashMenu();
                }
                this.reflow();
            },

            showSlashMenu(range) {
                this.slashMenuOpen = true;
                const rect = range.getBoundingClientRect();
                const menu = document.getElementById('slash-menu');
                menu.style.display = 'flex';
                menu.style.top = `${rect.bottom + window.scrollY + 5}px`;
                menu.style.left = `${rect.left + window.scrollX}px`;
                this.selectedSlashIndex = 0;
                this.updateSlashSelection();
            },

            hideSlashMenu() {
                this.slashMenuOpen = false;
                document.getElementById('slash-menu').style.display = 'none';
            },

            updateSlashSelection() {
                document.querySelectorAll('.slash-item').forEach((item, idx) => {
                    item.classList.toggle('selected', idx === this.selectedSlashIndex);
                });
            },

            applySlashCommand(cmd) {
                const selection = window.getSelection();
                if (!selection.rangeCount) return;
                const range = selection.getRangeAt(0);
                const container = range.startContainer;
                const offset = range.startOffset;
                if (container.nodeType === Node.TEXT_NODE) {
                    const val = container.textContent;
                    container.textContent = val.substring(0, offset - 1) + val.substring(offset);
                    range.setStart(container, offset - 1);
                    range.setEnd(container, offset - 1);
                }
                let html = '';
                switch (cmd) {
                    case 'h1': html = '<h1>Heading</h1>'; break;
                    case 'h2': html = '<h2>Subheading</h2>'; break;
                    case 'bullet': html = '<ul><li>List Item</li></ul>'; break;
                    case 'todo': html = '<div class="todo-item"><input type="checkbox" class="todo-checkbox" contenteditable="false"><span class="todo-text"></span></div>'; break;
                    case 'code': html = '<pre><code>// Code</code></pre>'; break;
                    case 'divider': html = '<hr>'; break;
                }
                document.execCommand('insertHTML', false, html);
                this.hideSlashMenu();
                this.reflow();
                if (cmd === 'todo') {
                    setTimeout(() => {
                        const ed = document.activeElement;
                        const lastTodo = Array.from(ed.querySelectorAll('.todo-item')).pop();
                        const span = lastTodo?.querySelector('.todo-text');
                        if (span) this.placeCursorAtEnd(span);
                    }, 20);
                }
            },

            handleEditorKeyDown(e, card) {
                if (this.slashMenuOpen) {
                    if (e.key === 'ArrowDown') { e.preventDefault(); this.selectedSlashIndex = (this.selectedSlashIndex + 1) % 6; this.updateSlashSelection(); } 
                    else if (e.key === 'ArrowUp') { e.preventDefault(); this.selectedSlashIndex = (this.selectedSlashIndex + 5) % 6; this.updateSlashSelection(); } 
                    else if (e.key === 'Enter') { e.preventDefault(); const items = document.querySelectorAll('.slash-item'); this.applySlashCommand(items[this.selectedSlashIndex].dataset.cmd); } 
                    else if (e.key === 'Escape' || e.key === ' ') { this.hideSlashMenu(); }
                    return;
                }
                const selection = window.getSelection();
                if (!selection.rangeCount) return;
                const range = selection.getRangeAt(0);
                const currentElement = selection.anchorNode.nodeType === Node.TEXT_NODE ? selection.anchorNode.parentElement : selection.anchorNode;
                const todoItem = currentElement.closest('.todo-item');
                if (todoItem) {
                    const textSpan = todoItem.querySelector('.todo-text');
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        const text = textSpan.innerText.trim();
                        if (text === '') {
                            const p = document.createElement('p'); p.innerHTML = '<br>'; todoItem.replaceWith(p);
                            const newRange = document.createRange(); newRange.setStart(p, 0); newRange.collapse(true);
                            selection.removeAllRanges(); selection.addRange(newRange);
                        } else {
                            const newTodo = document.createElement('div'); newTodo.className = 'todo-item';
                            newTodo.innerHTML = '<input type="checkbox" class="todo-checkbox" contenteditable="false"><span class="todo-text"></span>';
                            todoItem.after(newTodo); const newSpan = newTodo.querySelector('.todo-text');
                            const newRange = document.createRange(); newRange.setStart(newSpan, 0); newRange.collapse(true);
                            selection.removeAllRanges(); selection.addRange(newRange);
                        }
                        this.reflow(); return;
                    } else if (e.key === 'Backspace') {
                        const atStart = range.startOffset === 0 && (range.startContainer === textSpan || range.startContainer.parentNode === textSpan);
                        if (atStart) {
                            e.preventDefault();
                            const content = textSpan.innerHTML; const p = document.createElement('p'); p.innerHTML = content || '<br>';
                            todoItem.replaceWith(p); const newRange = document.createRange();
                            newRange.setStart(p, 0); newRange.collapse(true);
                            selection.removeAllRanges(); selection.addRange(newRange); this.reflow();
                        }
                    }
                }
            },

            renderStackSidebar() {
                const container = document.getElementById('deck-container'), label = document.getElementById('stack-sidebar-label');
                const s = this.getStacks(), cards = s[this.activeStackTag];
                if (!cards) { this.exitExploring(); return; }
                label.innerText = `#${this.activeStackTag}`; container.innerHTML = '';
                cards.forEach((c, idx) => {
                    const el = document.createElement('div'); 
                    el.className = `deck-item ${idx === this.selectedStackCardIndex ? 'active' : ''}`;
                    el.dataset.id = c.id;
                    el.innerHTML = `<div class="card-editor h-full" contenteditable="true">${c.content}</div>
                        <div class="card-controls"><div class="control-btn delete" onclick="event.stopPropagation(); state.deleteCard('${c.id}');">Ã—</div></div>`;
                    const ed = el.querySelector('.card-editor');
                    ed.oninput = (e) => { c.content = e.target.innerHTML; this.save(); const ns = this.getStacks(); if (!ns[this.activeStackTag]) this.exitExploring(); };
                    ed.onkeydown = (e) => this.handleEditorKeyDown(e, c);
                    el.onclick = () => { this.selectedStackCardIndex = idx; this.renderStackSidebar(); if (ed) this.placeCursorAtEnd(ed); };
                    container.appendChild(el);
                    if (idx === this.selectedStackCardIndex) {
                        setTimeout(() => { el.scrollIntoView({ behavior: 'smooth', block: 'center' }); this.placeCursorAtEnd(ed); }, 50);
                    }
                });
            },

            exitExploring() { this.isExploring = false; this.render(); },

            togglePalette(open) {
                this.paletteOpen = open; document.getElementById('palette-overlay').style.display = open ? 'flex' : 'none';
                if (open) { this.selectedPaletteIndex = 0; document.getElementById('palette-input').value = ''; this.searchPalette(''); document.getElementById('palette-input').focus(); }
            },

            searchPalette(q) {
                const query = (q || "").toLowerCase();
                this.paletteResults = this.cards.filter(c => (c.content || "").toLowerCase().includes(query));
                this.selectedPaletteIndex = 0; this.renderPaletteResults();
            },

            renderPaletteResults() {
                const res = document.getElementById('palette-results'); res.innerHTML = '';
                this.paletteResults.forEach((c, idx) => {
                    const div = document.createElement('div');
                    div.className = `p-4 cursor-pointer border-b border-[#1a1a1a] transition-colors hover:bg-zinc-800 ${idx === this.selectedPaletteIndex ? 'bg-zinc-800' : ''}`;
                    div.innerText = (c.content || "").replace(/<[^>]*>/g, '').substring(0, 100) + '...';
                    div.onclick = () => { this.focusItem(c.id); this.togglePalette(false); }; res.appendChild(div);
                });
            },

            toggleBoardSwitcher() {
                this.boardSwitcherOpen = !this.boardSwitcherOpen;
                document.getElementById('board-switcher-overlay').style.display = this.boardSwitcherOpen ? 'flex' : 'none';
                if (this.boardSwitcherOpen) { 
                    this.selectedBoardIndex = this.boards.findIndex(b => b.id === this.currentBoardId); 
                    this.renderBoardList(); 
                }
            },

            renderBoardList() {
                const container = document.getElementById('board-list-container'); container.innerHTML = '';
                this.boards.forEach((b, idx) => {
                    const el = document.createElement('div'); el.className = `board-card ${idx === this.selectedBoardIndex ? 'selected' : ''}`;
                    el.innerHTML = `<div class="flex-1"><div class="text-2xl font-black text-white leading-tight">${b.name}</div></div>
                        <div class="flex items-center justify-between"><div class="text-[10px] text-zinc-500 font-mono tracking-widest uppercase">${b.cards.length} Cards</div>
                        <svg class="w-5 h-5 opacity-20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect></svg></div>`;
                    el.onclick = (e) => { e.stopPropagation(); this.switchBoard(b.id); this.toggleBoardSwitcher(); };
                    el.onmouseenter = () => { this.selectedBoardIndex = idx; this.renderBoardList(); }; 
                    container.appendChild(el);
                    if (idx === this.selectedBoardIndex) el.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
                });
                
                const newEl = document.createElement('div');
                newEl.className = `board-card new-board ${this.selectedBoardIndex === this.boards.length ? 'selected' : ''}`;
                newEl.innerHTML = `<svg class="w-8 h-8 mb-4 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    <div class="text-[11px] font-bold uppercase tracking-[0.2em] text-zinc-400">New Board</div>`;
                newEl.onclick = (e) => { e.stopPropagation(); this.openPrompt(); };
                newEl.onmouseenter = () => { this.selectedBoardIndex = this.boards.length; this.renderBoardList(); };
                container.appendChild(newEl);
                if (this.selectedBoardIndex === this.boards.length) newEl.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
            },

            switchBoard(id) {
                this.save(); this.currentBoardId = id; this.loadCurrentBoard();
                this.activeId = this.cards[0]?.id || null; this.isExploring = false; 
                this.render(); this.snapToActive();
            },

            openPrompt() {
                this.promptOpen = true;
                this.selectedPromptButton = 'confirm';
                const input = document.getElementById('workspace-name-input');
                input.value = '';
                document.getElementById('prompt-overlay').classList.add('active');
                setTimeout(() => input.focus(), 50);
                this.renderPromptButtons();
            },

            closePrompt() {
                this.promptOpen = false;
                document.getElementById('prompt-overlay').classList.remove('active');
            },

            finalizeBoardCreation() {
                if (this.selectedPromptButton === 'confirm') {
                    const name = document.getElementById('workspace-name-input').value.trim() || "Untitled Workspace";
                    const newBoard = { id: getUUID(), name, cards: [] };
                    this.boards.push(newBoard);
                    this.switchBoard(newBoard.id);
                    this.closePrompt();
                    if (this.boardSwitcherOpen) this.toggleBoardSwitcher();
                    this.save();
                } else {
                    this.closePrompt();
                }
            },

            renderPromptButtons() {
                const c = document.getElementById('btn-prompt-cancel'), f = document.getElementById('btn-prompt-confirm');
                if (c && f) {
                    c.classList.toggle('highlighted', this.selectedPromptButton === 'cancel');
                    f.classList.toggle('highlighted', this.selectedPromptButton === 'confirm');
                }
            },

            renderDeleteButtons() {
                const c = document.getElementById('btn-delete-cancel'), d = document.getElementById('btn-delete-confirm');
                if (c && d) {
                    c.classList.toggle('highlighted', this.selectedDeleteButton === 'cancel');
                    d.classList.toggle('highlighted', this.selectedDeleteButton === 'confirm');
                }
            },

            togglePresentationMode() {
                this.presentationMode = !this.presentationMode;
                const overlay = document.getElementById('presentation-overlay');
                document.body.classList.toggle('presenting', this.presentationMode);
                
                if (this.presentationMode) {
                    const sortedCards = [...this.cards].sort((a, b) => a.y - b.y);
                    this.presentationSlides = sortedCards.map(c => c.content);
                    this.currentSlideIndex = 0;
                    overlay.classList.add('active');
                    this.renderSlides();
                } else {
                    overlay.classList.remove('active');
                }
            },

            renderSlides() {
                const container = document.getElementById('slide-container');
                container.innerHTML = '';
                this.presentationSlides.forEach((content, idx) => {
                    const slide = document.createElement('div');
                    slide.className = `slide ${idx === this.currentSlideIndex ? 'active' : (idx < this.currentSlideIndex ? 'prev' : '')}`;
                    slide.innerHTML = `<div class="slide-content">${content}</div>`;
                    container.appendChild(slide);
                });
                
                const progress = ((this.currentSlideIndex + 1) / this.presentationSlides.length) * 100;
                document.getElementById('slide-progress-bar').style.width = `${progress}%`;
                document.getElementById('slide-counter').innerText = `${this.currentSlideIndex + 1} / ${this.presentationSlides.length}`;
            },

            navigatePresentation(dir) {
                if (!this.presentationMode) return;
                const newIdx = this.currentSlideIndex + dir;
                if (newIdx >= 0 && newIdx < this.presentationSlides.length) {
                    this.currentSlideIndex = newIdx;
                    this.renderSlides();
                }
            },

            openSource() {
                this.sourceOpen = true;
                const modal = document.getElementById('source-overlay');
                const pre = document.getElementById('source-text');
                const rawCode = '<!DOCTYPE html>\n' + document.documentElement.outerHTML;
                pre.innerText = rawCode;
                modal.classList.add('active');
            },

            closeSource() {
                this.sourceOpen = false;
                document.getElementById('source-overlay').classList.remove('active');
            },

            copySource() {
                const text = document.getElementById('source-text').innerText;
                navigator.clipboard.writeText(text).then(() => {
                    const btn = document.getElementById('btn-copy-source');
                    const originalText = btn.innerHTML;
                    btn.innerText = 'Copied!';
                    setTimeout(() => btn.innerHTML = originalText, 2000);
                });
            },

            onMouseDown(e) {
                if (this.activeStackTag && this.isExploring) return; 
                if (this.paletteOpen || this.boardSwitcherOpen || this.promptOpen || this.deletePromptOpen || this.slashMenuOpen || this.presentationMode || this.sourceOpen) return;
                const target = e.target;
                if (target.closest('.card-editor') || target.closest('.floating-btn') || target.closest('.control-btn') || target.closest('.todo-checkbox')) return;
                const sEl = target.closest('.stack-representation'), cEl = target.closest('.card');
                if (sEl) { this.draggedItem = { type: 'stack', tag: sEl.dataset.tag }; this.focusItem(sEl.dataset.tag); }
                else if (cEl) { this.draggedItem = { type: 'card', id: cEl.dataset.id }; this.focusItem(cEl.dataset.id); }
                else { this.isDraggingViewport = true; this.dragStart = { x: e.clientX - this.camera.x, y: e.clientY - this.camera.y }; return; }
                const itm = this.draggedItem.type === 'card' ? this.cards.find(x => x.id === this.draggedItem.id) : this.getStacks()[this.draggedItem.tag][0];
                this.dragOffset = { x: e.clientX - (itm.x + this.camera.x), y: e.clientY - (itm.y + this.camera.y) };
            },

            onMouseMove(e) {
                if (this.isDraggingViewport) {
                    this.camera.x = e.clientX - this.dragStart.x; this.camera.y = e.clientY - this.dragStart.y;
                    document.getElementById('viewport').style.transform = `translate(${this.camera.x}px, ${this.camera.y}px)`;
                } else if (this.draggedItem) {
                    const dx = e.clientX - this.dragOffset.x - this.camera.x, dy = e.clientY - this.dragOffset.y - this.camera.y;
                    if (this.draggedItem.type === 'card') { const c = this.cards.find(x => x.id === this.draggedItem.id); c.x = dx; c.y = dy; }
                    else { const grp = this.getStacks()[this.draggedItem.tag]; if (grp) { const ox = dx - grp[0].x, oy = dy - grp[0].y; grp.forEach(x => { x.x += ox; x.y += oy; }); } }
                    this.render();
                }
            },

            onMouseUp() { this.isDraggingViewport = false; if (this.draggedItem) { this.save(); this.draggedItem = null; this.reflow(); } },

            handleGlobalKeys(e) {
                const isMod = e.metaKey || e.ctrlKey;
                
                if (e.key === 'F8') {
                    e.preventDefault();
                    this.togglePresentationMode();
                    return;
                }

                if (this.presentationMode) {
                    if (e.key === 'ArrowRight' || e.key === ' ' || e.key === 'ArrowDown') { e.preventDefault(); this.navigatePresentation(1); }
                    else if (e.key === 'ArrowLeft' || e.key === 'Backspace' || e.key === 'ArrowUp') { e.preventDefault(); this.navigatePresentation(-1); }
                    else if (e.key === 'Escape') { e.preventDefault(); this.togglePresentationMode(); }
                    return;
                }

                if (this.sourceOpen) {
                    if (e.key === 'Escape') { e.preventDefault(); this.closeSource(); }
                    return;
                }

                if (this.promptOpen) {
                    if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') { e.preventDefault(); this.selectedPromptButton = (this.selectedPromptButton === 'cancel') ? 'confirm' : 'cancel'; this.renderPromptButtons(); }
                    else if (e.key === 'Enter') { e.preventDefault(); this.finalizeBoardCreation(); }
                    else if (e.key === 'Escape') { e.preventDefault(); this.closePrompt(); }
                    return;
                }
                if (this.deletePromptOpen) {
                    if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') { e.preventDefault(); this.selectedDeleteButton = (this.selectedDeleteButton === 'cancel') ? 'confirm' : 'cancel'; this.renderDeleteButtons(); }
                    else if (e.key === 'Enter') { e.preventDefault(); this.handleDeleteConfirmation(); }
                    else if (e.key === 'Escape') { e.preventDefault(); this.closeDeletePrompt(); }
                    return;
                }
                if (this.boardSwitcherOpen) {
                    if (e.key === 'ArrowRight') { e.preventDefault(); this.selectedBoardIndex = (this.selectedBoardIndex + 1) % (this.boards.length + 1); this.renderBoardList(); }
                    else if (e.key === 'ArrowLeft') { e.preventDefault(); this.selectedBoardIndex = (this.selectedBoardIndex - 1 + (this.boards.length + 1)) % (this.boards.length + 1); this.renderBoardList(); }
                    else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (this.selectedBoardIndex === this.boards.length) this.openPrompt();
                        else { this.switchBoard(this.boards[this.selectedBoardIndex].id); this.toggleBoardSwitcher(); }
                    }
                    else if (e.key === 'Escape') { e.preventDefault(); this.toggleBoardSwitcher(); }
                    else if (isMod && (e.key === 'Delete' || e.key === 'Backspace')) { e.preventDefault(); this.openDeleteBoardPrompt(); }
                    return;
                }
                if (isMod && (e.key === 'Delete' || e.key === 'Backspace')) { e.preventDefault(); this.deleteActiveItem(); return; }
                if (isMod && e.key === 'Enter') { e.preventDefault(); const cx = -this.camera.x + (window.innerWidth / 2) - 225, cy = -this.camera.y + (window.innerHeight / 2) - 80; this.createCard("", cx, cy); return; }
                if (isMod && e.key === 'k') { e.preventDefault(); this.togglePalette(true); return; }
                if (isMod && e.key === '/') { e.preventDefault(); this.toggleBoardSwitcher(); return; }
                if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight'].includes(e.key) && !this.slashMenuOpen && !this.isExploring) {
                    if (e.key === 'ArrowRight' && this.activeStackTag) { e.preventDefault(); this.isExploring = true; this.selectedStackCardIndex = 0; this.render(); return; }
                    this.navigateSpatial(e.key);
                }
                if (this.isExploring && this.activeStackTag) {
                    if (e.key === 'ArrowLeft' || e.key === 'Escape') { e.preventDefault(); this.exitExploring(); }
                    else if (e.key === 'ArrowDown') { e.preventDefault(); const s = this.getStacks()[this.activeStackTag]; if (s) { this.selectedStackCardIndex = (this.selectedStackCardIndex + 1) % s.length; this.renderStackSidebar(); } }
                    else if (e.key === 'ArrowUp') { e.preventDefault(); const s = this.getStacks()[this.activeStackTag]; if (s) { this.selectedStackCardIndex = (this.selectedStackCardIndex - 1 + s.length) % s.length; this.renderStackSidebar(); } }
                }
            },

            deleteActiveItem() {
                if (this.isExploring && this.activeStackTag) {
                    const s = this.getStacks();
                    const group = s[this.activeStackTag];
                    if (group && group[this.selectedStackCardIndex]) {
                        const id = group[this.selectedStackCardIndex].id;
                        this.deleteCard(id);
                        const ns = this.getStacks();
                        if (!ns[this.activeStackTag] || ns[this.activeStackTag].length <= 1) this.exitExploring();
                        else { this.selectedStackCardIndex = Math.max(0, this.selectedStackCardIndex - 1); this.renderStackSidebar(); }
                    }
                    return;
                }
                if (this.activeStackTag) this.openDeleteStackPrompt();
                else if (this.activeId) this.deleteCard(this.activeId);
            },

            navigateSpatial(key) {
                const cur = this.activeId; if (!cur) return;
                const s = this.getStacks(), stackedIds = new Set(); Object.values(s).forEach(g => g.forEach(x => stackedIds.add(x.id)));
                const anchors = []; Object.entries(s).forEach(([t, g]) => anchors.push({ id: t, x: g[0].x, y: g[0].y }));
                this.cards.filter(x => !stackedIds.has(x.id)).forEach(x => anchors.push({ id: x.id, x: x.x, y: x.y }));
                const src = anchors.find(x => x.id === cur); if (!src) return;
                const filtered = anchors.filter(x => x.id !== cur); filtered.sort((a, b) => Math.hypot(a.x - src.x, a.y - src.y) - Math.hypot(b.x - src.x, b.y - src.y));
                const next = filtered.find(a => {
                    if (key === 'ArrowUp') return a.y < src.y - 40; if (key === 'ArrowDown') return a.y > src.y + 40;
                    if (key === 'ArrowLeft') return a.x < src.x - 100; if (key === 'ArrowRight') return a.x > src.x + 100;
                });
                if (next) this.focusItem(next.id);
            },

            exportData() {
                const d = JSON.stringify({ boards: this.boards, currentBoardId: this.currentBoardId }), b = new Blob([d], { type: 'application/json' });
                const a = document.createElement('a'); a.href = URL.createObjectURL(b); a.download = 'jotter-backup.json'; a.click();
            },

            importData() {
                const i = document.createElement('input'); i.type = 'file';
                i.onchange = (e) => {
                    const r = new FileReader(); r.onload = (re) => {
                        const data = JSON.parse(re.target.result); this.boards = data.boards; this.currentBoardId = data.currentBoardId;
                        this.save(); this.loadCurrentBoard(); this.render();
                    }; r.readAsText(e.target.files[0]);
                }; i.click();
            }
        };

        state.init();
    </script>


        <script type="module" onerror="console.warn('Failed to load the app. Try reloading it.')">import '@/index';</script>
        </body></html>